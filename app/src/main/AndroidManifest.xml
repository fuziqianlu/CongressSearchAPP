<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ziqianfu.congresssearch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LegisDetails"
            android:theme="@style/MyActionBar">
            <intent-filter>
                <action android:name="com.ziqianfu.congresssearch.viewlegis"/>
                <category android:name="android.intent.category.DEFAULT"/>

            </intent-filter>
        </activity>
        <activity android:name=".BillDetail"
            android:theme="@style/MyActionBar">
            <intent-filter>
                <action android:name="com.ziqianfu.congresssearch.bills"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".CommitteeDetail"
            android:theme="@style/MyActionBar">
            <intent-filter>
                <action android:name="com.ziqianfu.congresssearch.committees"></action>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".AboutMe"
            android:theme="@style/MyActionBar">
            <intent-filter>
                <action android:name="com.ziqianfu.congresssearch.aboutme"></action>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
    <uses-permission  android:name="android.permission.INTERNET"/>
</manifest>